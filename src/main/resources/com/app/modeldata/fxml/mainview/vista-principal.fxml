<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="600.0" prefWidth="1200" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.app.controllers.modeldata.ModelDataAppController">
    <!-- ESTILO PARA EL SIDEBAR -->
    <!-- <stylesheets>
        <URL value="@../../css/main.css" />
    </stylesheets> -->

    <!-- SIDEBAR IZQUIERDO -->
    <left>
        <VBox fx:id="sideBar" maxWidth="260" prefHeight="600.0" prefWidth="237.0" style="-fx-background-color: #1D6B8C; -fx-background-radius: 0 0 15 0;">
            <AnchorPane>
                <!-- PANEL DEL HEADER -->
                <Pane prefHeight="121.0" prefWidth="260.0">
                    <!-- HEADER - LOGO MODELDATA  -->
                    <ImageView fitHeight="48.0" fitWidth="48.0" layoutX="15.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../../images/logos/login/ModelDataLogoBordeSaliente.png" />
                    </ImageView>
                    <!-- TITLE - MODELDATA -->
                    <Text fill="white" layoutX="82.0" layoutY="36.0" text="MODEL">
                        <font>
                            <Font name="System Bold" size="24" />
                        </font>
                    </Text>
                    <Text fill="white" layoutX="82.0" layoutY="58.0" text="DATA">
                        <font>
                            <Font name="System Bold" size="24" />
                        </font>
                    </Text>
                    <Separator layoutY="69.0" opacity="0.5" prefHeight="10.0" prefWidth="260.0" />
                </Pane>
            </AnchorPane>
            <AnchorPane>
                <!-- VBOX PARA BOTONES DEL SIDEBAR -->
                <VBox alignment="CENTER_LEFT" prefHeight="270.0" prefWidth="260.0" style="-fx-padding:20 0 0 0;">
                    <!-- BOTÓN INICIO -->
                    <ToggleButton fx:id="btnInicio" alignment="CENTER_LEFT" maxWidth="Infinity" styleClass="toggle-button-sidebar" text="%sidebar.inicio" textFill="WHITE">
                        <graphic>
                            <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@../../images/icons/home-icon.png" />
                            </ImageView>
                        </graphic>
                        <font>
                            <Font size="20.0" />
                        </font>
                    </ToggleButton>
                    <!-- BOTÓN REGISTRO -->
                    <ToggleButton fx:id="btnRegistro" alignment="CENTER_LEFT" maxWidth="Infinity" styleClass="toggle-button-sidebar" text="REGISTRO" textFill="WHITE">
                        <graphic>
                            <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@../../images/icons/user-icon.png" />
                            </ImageView>
                        </graphic>
                        <font>
                            <Font size="20.0" />
                        </font>
                    </ToggleButton>
                    <!-- BOTÓN CONSOLIDACIÓN -->
                    <ToggleButton fx:id="btnConsolidacion" alignment="CENTER_LEFT" maxWidth="Infinity" styleClass="toggle-button-sidebar" text="CONSOLIDACIÓN" textFill="WHITE">
                        <graphic>
                            <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@../../images/icons/synchronization-icon.png" />
                            </ImageView>
                        </graphic>
                        <font>
                            <Font size="20.0" />
                        </font>
                    </ToggleButton>
                    <!-- BOTÓN DATOS -->
                    <ToggleButton fx:id="btnDatos" alignment="CENTER_LEFT" maxWidth="Infinity" styleClass="toggle-button-sidebar" text="%sidebar.datos" textFill="WHITE">
                        <graphic>
                            <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@../../images/icons/data-icon.png" />
                            </ImageView>
                        </graphic>
                        <font>
                            <Font size="20.0" />
                        </font>
                    </ToggleButton>
                    <!-- BOTÓN MODELADO -->
                    <ToggleButton fx:id="btnModelado" alignment="CENTER_LEFT" maxWidth="Infinity" styleClass="toggle-button-sidebar" text="%sidebar.modelado" textFill="WHITE">
                        <graphic>
                            <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@../../images/icons/model-icon.png" />
                            </ImageView>
                        </graphic>
                        <font>
                            <Font size="20.0" />
                        </font>
                    </ToggleButton>
                    <!-- BOTÓN CONFIGURACIÓN -->
                    <ToggleButton fx:id="btnConfiguracion" alignment="CENTER_LEFT" maxWidth="Infinity" styleClass="toggle-button-sidebar" text="%sidebar.configuracion" textFill="WHITE">
                        <graphic>
                            <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@../../images/icons/setting-icon.png" />
                            </ImageView>
                        </graphic>
                        <font>
                            <Font size="20.0" />
                        </font>
                    </ToggleButton>
                </VBox>
            </AnchorPane>
            <AnchorPane minHeight="90.0" VBox.vgrow="ALWAYS">
                <Pane minHeight="90.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                    <Text fill="WHITE" layoutX="50.0" layoutY="179.0" strokeType="OUTSIDE" strokeWidth="0.0" text="USUARIO" wrappingWidth="102.072265625">
                        <font>
                            <Font size="20.0" />
                        </font>
                    </Text>
                            <MenuButton layoutX="160.0" layoutY="160.0" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="24.0" prefWidth="50.0" style="-fx-background-radius: 20;" styleClass="button-user-side-bar" textFill="WHITE">
                        <items>
                            <MenuItem mnemonicParsing="false" onAction="#itemLogout" text="%menu.logout" />
                        </items>
                        <font>
                            <Font size="10.0" />
                        </font>
                        <graphic>
                            <HBox prefHeight="24.0" prefWidth="51.0" style="-fx-alignment: CENTER;">
                                <ImageView fitHeight="24" fitWidth="24">
                                    <Image url="@../../images/icons/user-icon.png" />
                                </ImageView>
                                <ImageView fitHeight="6.0" fitWidth="12.0">
                                    <Image url="@../../images/icons/arrow-icon.png" />
                                </ImageView>
                            </HBox>
                        </graphic>
                    </MenuButton>
                </Pane>
            </AnchorPane>
        </VBox>
    </left>

    <!--CONTENIDO PRINCIPAL: DERECHA DEL SIDEBAR -->
    <center>
        <!-- BORDERPANE PRINCIPAL PARA EL TOOLBAR Y CONTENIDO PRINCIPAL -->
        <BorderPane fx:id="mainLayout">
            <!-- TOP: TOOLBAR Y BREADCRUMB -->
            <top>
                <VBox>
                    <!-- HBOX PARA EL TOOLBAR -->
                    <HBox fx:id="topBar" alignment="CENTER_LEFT" prefHeight="50" spacing="15" style="-fx-background-color: #F2F2F2;">
                        <!-- BOTÓN BURGER / FLECHA -->
                        <StackPane fx:id="menuButton" onMouseClicked="#toggleMenu">
                            <HBox.margin>
                                <Insets left="15.0" />
                            </HBox.margin>
                            <!-- Icono burger -->
                            <ImageView fx:id="burgerIcon" fitHeight="25" fitWidth="25" preserveRatio="true">
                                <Image url="@../../images/icons/burger-button-colo-blue-icon.png" />
                            </ImageView>
                            <!-- SVG flecha -->
                            <SVGPath fx:id="arrowIcon" content="M18 12 L6 4 L6 20 Z" fill="#197CA1" scaleX="0.8" scaleY="0.8" visible="false" />
                        </StackPane>
                        <!-- TÍTULO DE LA TOOLBAR -->
                        <Text fill="#197CA1" text="%toolbar.title.inicio">
                            <font>
                                <Font name="System Bold" size="25.0" />
                            </font>
                        </Text>
                        <!-- PANEL SEPARADOR -->
                        <Pane minWidth="-Infinity" prefHeight="50.0" prefWidth="150.0" HBox.hgrow="ALWAYS" />
                        <!-- PANEL PARA LA BARRA DE BÚSQUEDA -->
                        <Pane prefHeight="50.0" prefWidth="314.0">
                            <HBox alignment="CENTER_LEFT" layoutX="7.0" layoutY="9.0" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="32.0" prefWidth="300.0" spacing="5" style="-fx-background-color: #D9D9D9; -fx-padding: 5; -fx-background-radius: 50;">
                                <ImageView fitHeight="18" fitWidth="18">
                                    <Image url="@../../images/icons/search-icon.png" />
                                </ImageView>

                                <TextField fx:id="searchField" promptText="%toolbar.search.prompt" style="-fx-background-color:transparent; -fx-border-color:transparent;" HBox.hgrow="ALWAYS" />
                            </HBox>
                        </Pane>
                        <!-- PANEL PARA EL ÍCONO Y BOTÓN DE USUARIO -->
                        <Pane prefHeight="50.0" prefWidth="89.0" style="-fx-background-color: transparent;">
                            <MenuButton layoutY="9.0" mnemonicParsing="false" style="-fx-background-radius: 23;" styleClass="button-user-toolbar">
                                <items>
                                    <MenuItem mnemonicParsing="false" onAction="#itemLogout" text="%menu.logout" />
                                </items>
                                <graphic>
                                    <HBox prefHeight="24.0" prefWidth="51.0" style="-fx-alignment: CENTER;">
                                        <ImageView fitHeight="24" fitWidth="24">
                                            <Image url="@../../images/icons/user-color-blue-icon.png" />
                                        </ImageView>
                                        <ImageView fitHeight="24.0" fitWidth="24.0">
                                            <Image url="@../../images/icons/arrow-color-blue-icon.png" />
                                        </ImageView>
                                    </HBox>
                                </graphic>
                            </MenuButton>
                        </Pane>
                    </HBox>
                    <!-- MENU BAR -->
                    <HBox prefWidth="940.0" style="-fx-background-color: #197CA1; -fx-background-radius: 15;">
                        <padding>
                            <Insets right="20.0" />
                        </padding>
                        <MenuBar fx:id="menuBar" prefHeight="28.0" style="-fx-background-color: #197CA1; -fx-background-radius: 15;">
                                <Menu mnemonicParsing="false" style="-fx-text-fill: #FFFFFF;" text="%menu.file">
                                    <MenuItem mnemonicParsing="false" onAction="#itemImport" text="%menu.file.item.import" />
                                    <MenuItem mnemonicParsing="false" onAction="#itemExport" text="%menu.file.item.export" />
                                    <MenuItem mnemonicParsing="false" onAction="#itemSave" text="%menu.file.item.save" />
                                    <MenuItem mnemonicParsing="false" onAction="#itemSaveAs" text="%menu.file.item.saveas" />
                                    <MenuItem mnemonicParsing="false" onAction="#itemLogout" text="%menu.logout" />
                                    <MenuItem mnemonicParsing="false" onAction="#itemExit" text="%menu.file.item.exit" />
                                </Menu>
                                <Menu mnemonicParsing="false" text="%menu.edit">
                                    <MenuItem mnemonicParsing="false" text="%menu.edit.item.undo" />
                                    <MenuItem mnemonicParsing="false" text="%menu.edit.item.redo" />
                                    <MenuItem mnemonicParsing="false" text="%menu.edit.item.delete" />
                                </Menu>
                                <Menu mnemonicParsing="false" text="%menu.view">
                                    <MenuItem mnemonicParsing="false" text="%menu.view.item.delete" />
                                </Menu>
                                <Menu mnemonicParsing="false" text="%menu.analyze">
                                    <MenuItem mnemonicParsing="false" onAction="#itemOpenFrequency" text="%menu.analyze.item.frequency" />
                                </Menu>
                                <Menu mnemonicParsing="false" text="%menu.help">
                                    <MenuItem mnemonicParsing="false" text="%menu.help.item.manual" />
                                    <MenuItem mnemonicParsing="false" onAction="#itemOpenAbout" text="%menu.help.item.about" />
                                </Menu>
                        </MenuBar>
                    </HBox>
               <padding>
                  <Insets right="12.0" />
               </padding>
                </VBox>
            </top>

            <!-- CONTENIDO DEL CENTER -->
            <center>
                <AnchorPane fx:id="contentPane" />
            </center>
        </BorderPane>
    </center>
</BorderPane>
